{
  "name": "netgear-main",
  "private": true,
  "sideEffects": false,
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production run-p build:*",
    "build:remix": "remix build",
    "build:server": "esbuild ./server/main.ts --bundle --external:fsevents --platform=node --sourcemap --format=cjs --log-level=warning --outdir=build",
    "ci": "run-p lint build && npm run typecheck",
    "clean": "rm -rf build public/build",
    "dev": "run-p dev:*",
    "dev:build": "cross-env NODE_ENV=development npm run build:server -- --watch",
    "dev:remix": "remix dev --manual -c \"node --inspect --env-file=.env ./build/main.js\"",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "npm run lint -- --fix",
    "run": "node -r esbuild-runner/register --env-file=.env",
    "start": "cross-env NODE_ENV=production node --env-file=.env ./build/main.js",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@heroicons/react": "2.1.1",
    "@nextui-org/react": "2.2.9",
    "@remix-run/css-bundle": "2.5.1",
    "@remix-run/express": "2.5.1",
    "@remix-run/node": "2.5.1",
    "@remix-run/react": "2.5.1",
    "@remix-run/server-runtime": "2.5.1",
    "@remix-validated-form/with-zod": "2.0.7",
    "@wesp-up/express": "1.0.1",
    "@wesp-up/express-remix": "1.0.1",
    "@wesp-up/logger": "1.1.0",
    "@wesp-up/ui": "*",
    "bcryptjs": "2.4.3",
    "convert-units": "2.3.4",
    "cron": "3.1.6",
    "cross-env": "7.0.3",
    "deepmerge": "4.3.1",
    "envalid": "8.0.0",
    "express": "4.18.2",
    "isbot": "4.4.0",
    "prom-client": "15.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "remix-auth": "3.6.0",
    "remix-auth-form": "1.4.0",
    "remix-auth-google": "2.0.0",
    "remix-themes": "1.3.1",
    "remix-validated-form": "5.1.5",
    "source-map-support": "0.5.21",
    "tailwind-merge": "2.2.0",
    "tailwind-variants": "0.1.20",
    "tiny-invariant": "1.3.1",
    "zod": "3.22.4",
    "zod-form-data": "2.0.2"
  },
  "devDependencies": {
    "@remix-run/dev": "2.5.1",
    "@types/bcryptjs": "2.4.6",
    "@types/convert-units": "2.3.9",
    "@types/express": "4.17.21",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@wesp-up/eslint-config-react": "1.0.0",
    "@wesp-up/tsconfig": "1.0.0",
    "autoprefixer": "10.4.17",
    "esbuild": "0.19.11",
    "eslint": "8.56.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.33",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3"
  }
}
